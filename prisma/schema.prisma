  LIKE     @map("üíú")
  THANKFUL @map("üôè")
  SLAY     @map("üíÖ")
  FUNNY    @map("ü§£")
  CRYING   @map("üò≠")
  SHOCKED  @map("üò¶")
}

enum GradingBasis {
  PASS_FAIL @map("Pass/Fail")
  GRADED    @map("Graded")
  NA        @map("NA")
}
